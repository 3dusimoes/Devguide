{
    "plugins": [
        "youtube",
        "richquotes",
        "anchors",
        "page-toc-button",
        "mermaid",
        "-mermaid-2",
        "github",
        "language-picker",
        "custom-favicon",
        "bulk-redirect",
        "redirect-root@git+https://github.com/hamishwillee/gitbook-plugin-redirect-root.git"
    ],
    "pluginsConfig":
    {

        "richquotes":
        {
            "tip": {
                "alert": "success",
                "picto": "fa-thumbs-o-up"
            }

        },
        "language-redirect": {
            "baseurl": "https://dev.px4.io/"
        },
        "github": {
            "url": "https://github.com/PX4/Devguide"
        },
        "favicon": "favicon.ico",
        "bulk-redirect": {
            "basepath": "/",
            "redirectsFile": "redirects.json"
        },

        "redirect-root": {
            "url":"https://dev.px4.io/en/"
        }
        
    }
}
